
extends layouts/email-layout

block content
  .greeting
	| Dear
	strong= fullName
	| ,

  if enrollmentStatus === 'passed'
	p(style="color: #155724;")
	  | üéâ Congratulations! You have PASSED your graduation thesis in the semester
	  strong= semesterName
	  | .
  else if enrollmentStatus === 'failed'
	p(style="color: #721c24;")
	  | ‚ùå Unfortunately, you did NOT PASS your graduation thesis in the semester
	  strong= semesterName
	  | .
  else
	p(style="color: #495057;")
	  | ‚ÑπÔ∏è Your thesis status:
	  strong= enrollmentStatusText

  .info-box
	h3 üìã Details
	.info-item
	  span.info-label Semester:
	  span.info-value= semesterName + " (" + semesterCode + ")"
	.info-item
	  span.info-label Student:
	  span.info-value= fullName
	.info-item
	  span.info-label Email:
	  span.info-value= studentEmail
	.info-item
	  span.info-label Updated at:
	  span.info-value= updateDate
	.info-item
	  span.info-label Result:
	  if enrollmentStatus === 'passed'
		span.info-value(style="color: #28a745;") PASSED
	  else if enrollmentStatus === 'failed'
		span.info-value(style="color: #dc3545;") NOT PASSED
	  else
		span.info-value= enrollmentStatusText

  if enrollmentStatus === 'passed'
	.success-box
	  strong üåü Congratulations:
	  |  We are proud to announce that you have successfully completed your graduation thesis! This is the result of your effort, dedication, and knowledge accumulated throughout your studies. We are proud of your achievement and wish you great success in your future career.
  else if enrollmentStatus === 'failed'
	.warning-box
	  strong üìö Next steps:
	  |  You can contact your supervisor for detailed feedback, prepare for the next semester, or refer to supporting materials from the faculty.

  .footer
	p(style="color: #6c757d; margin: 0; font-size: 14px;")
	  | Best regards,
	  br
	  strong TheSync System
